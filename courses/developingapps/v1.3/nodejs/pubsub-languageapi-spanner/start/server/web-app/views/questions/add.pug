extends ../base.pug

block content
  h3 #{action} question
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="author") Author
      input.form-control(type="text", name="author", id="author", value=question.author)    
    .form-group
      label(for="quiz") Quiz
      select.form-control(name="quiz", id="quiz", value=question.quiz)
        option(value="gcp") -- Select Category --
        option(value="gcp") Google Cloud Platform
        option(value="people") People
        option(value="places") Places
    .form-group
      label(for="title") Title
      input.form-control(type="text", name="title", id="title", value=question.title)
    .form-group.hidden
      label(for="imageUrl") ImageUrl
      input.form-control(type="hidden", name="imageUrl", id="imageUrl", value=question.imageUrl)
    .form-group
      label(for="image") Image
      input.form-control(type="file", name="image", id="image")
    .form-group
      label(for="answer1") Answer 1
      .input-group
        span.input-group-addon
         input(type="radio", name="correctAnswer", value="1")
        input.form-control(type="text", name="answer1", id="answer1", value=question.answer1)
    .form-group
      label(for="answer2") Answer 2
      .input-group
        span.input-group-addon
         input(type="radio", name="correctAnswer", value="2")
        input.form-control(type="text", name="answer2", id="answer2", value=question.answer1)
    .form-group
      label(for="answer3") Answer 3
      .input-group
        span.input-group-addon
         input(type="radio", name="correctAnswer", value="3")
        input.form-control(type="text", name="answer3", id="answer3", value=question.answer1)
    .form-group
      label(for="answer4") Answer 4
      .input-group
        span.input-group-addon
         input(type="radio", name="correctAnswer", value="4")
        input.form-control(type="text", name="answer4", id="answer4", value=question.answer1)

    .form-group
    button.btn.btn-success(type="submit") Save

